    <style name="FontFamily">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="fontStyle">normal</item>
        <item name="android:fontWeight" tools:ignore="NewApi">500</item>
        <item name="android:fontStyle" tools:ignore="NewApi">normal</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>
    </style>

    <style name="Theme.Telent.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:fontFamily">@style/FontFamily</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        //
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

