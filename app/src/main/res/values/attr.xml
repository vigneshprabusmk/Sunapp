<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AwesomeSpinnerStyle">

        <attr name="spinnerDirection" format="string">
            <flag name="ltr" value="0" />
            <flag name="rtl" value="1" />
        </attr>

        <attr name="spinnerHint" format="string" />
        <!--
                <attr name="spinnerHintSize" format="dimension"/>
        -->

    </declare-styleable>
    <declare-styleable name="signature">
        <attr name="enableSignature" format="boolean" />
        <attr name="penSize" format="dimension" />
        <attr name="penColor" format="color" />
        <attr name="backgroundColor" format="color" />
    </declare-styleable>
</resources>