    <style name="Text.Regular" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text.Regular.Medium" parent="Text.Regular">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="Text.Regular.Large" parent="Text.Regular">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Text.Regular.ExtraLarge" parent="Text.Regular">
        <item name="android:textSize">@dimen/dp_20</item>
    </style>

    <style name="Text.Bold" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Bold.Large" parent="Text.Bold">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Text.Bold.ExtraLarge" parent="Text.Bold">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="ButtonStyleFilled1" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="cornerRadius">@dimen/dp_35</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonStyleFilled" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/duringWorkBg</item>
        <item name="cornerRadius">@dimen/dp_35</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/orange</item>
        <item name="background">@drawable/circle_background</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


</resources>